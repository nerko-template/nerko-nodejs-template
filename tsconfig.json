{
  "compilerOptions": {
    "baseUrl": ".",
    "sourceMap": true,
    "declaration": true,
    "module": "commonjs",
    "target": "es6",
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "lib": [
      "es5",
      "es2017",
      "dom",
      "scripthost"
    ],
    "paths": {
      "@mocks/*": ["__mocks__/*"],
      "@src/*": ["src/*"]
    }
  },
  "include": [
    "./src/**/*", "jest.config.js", "test", "__mocks__"
  ],
  "exclude": [
    "node_modules",
    "lib",
    "es"
  ]
}