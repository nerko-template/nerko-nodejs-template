{
  "compilerOptions": {
    "outDir": "../lib",
    "sourceMap": true,
    "declaration": true,
    "module": "commonjs",
    "target": "es6",
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "rootDir": "../src",
    "lib": [
      "es5",
      "es2017",
      "dom",
      "scripthost"
    ]
  },
  "include": [
    "../src/**/*", "jest.config.js"
  ],
  "exclude": [
    "node_modules",
    "lib",
    "es"
  ]
}